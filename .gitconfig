[user]
	name = kadekillary
	email = kadekillary@pm.me
[core]
	editor = nvim
	pager = delta
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[color]
	ui = auto
[github]
	user = kxzk
[init]
	defaultBranch = main
[fetch]
	prune = true
[alias]
	co = checkout
	br = branch
	bd = branch -D
	bl = "branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate"
	ci = commit
	puo = push -u origin main
	ss = status --short
	undo = reset --soft HEAD~1
	unstage = reset HEAD --
	rsoft = reset --soft HEAD
	rsoftm = reset --soft master
	rhard = reset --hard HEAD
	rsoftm = reset --hard master
	amend = commit --amend
	last = log -1 HEAD
	rank = shortlog -sne --no-merges
	rankfile = shortlog -sne
	find = "log --pretty='format:%Cgreen%H %Cblue%s' --name-status --grep"
	lg = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
[credential]
	helper = store
